@charset "utf-8";
/*重置密码*/
.user-login {background-color:#e1e4e8;border:none 1px #666666;box-shadow:0 0 10px rgba(0,0,0,0.4);padding:30px; width:1000px; margin:0 auto;position:relative; padding:40px;}
.user-login button { position:absolute;top:1rem;right:1rem;display:block;font-size:2.5rem;border:none;background:none;color:#aaa;cursor:pointer;}
.user-login button:hover { color:rgba(51,51,51,.8);}
.user-login h4.lead-in {border-left: 8px solid #19b28a;padding-left:8px;margin-left:-16px;margin-bottom:20px; height:34px; line-height:34px; font-size:32px; font-weight:100;text-transform:uppercase;}
.user-login label{ color:#363636; margin:10px 0; font-size:20px; display:block;}
.user-login input[type=text],.user-login input[type=password]{ width:100%; height:40px; height:40px; border:1px solid transparent;}
.user-login input[type=text]:focus,.user-login input[type=password]:focus{border-color:#20bff0; box-shadow:0 0 14px rgba(50, 204, 191, 0.3);}

