@charset "utf-8";
.further-info, .student-list{
    background-color: #fff;
}
* {
    padding: 0;
    margin: 0;
}
html {
    font-size: 20px;
}

@media screen and (max-width: 1920px) {
    html {
        font-size: 18px !important;
    }
}

@media screen and (max-width: 1300px) {
    html {
        font-size: 16px !important;
    }
}

@media screen and (max-width: 1280px) {
    html {
        font-size: 14px !important;
    }
}

@media screen and (max-width: 750px) {
    html {
        font-size: 12px !important;
    }

    body {
        max-width: 750px;
    }
}
/*顶部轮播图*/
.indexBanner{
    margin: 0 auto;
    width: 100%;
    height: 520px;
    position: relative;
    overflow: hidden;
    margin-top: 4rem;
}

.indexBanner ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
    position: absolute;
    top: 0;
    left: 0;
    width: 99999px;
    padding-left: 0;
}

.indexBanner li {
    float: left;
    /*width:100%;*/
    padding-left: 0;
}

.indexBanner li img {
    width: 100%;
    padding-left: 0;
}

.bannerprev {
    position: absolute;
    left: 8%;
    top: 34%;
}

.bannernext {
    position: absolute;
    right: 8%;
    top: 34%;
}

.step {
    position: absolute;
    /*width: 10%;*/
    margin: 0 auto;
    left: 45%;
    bottom: 1rem;
}

.step span {
    display: block;
    width: 20px;
    height: 20px;
    text-align: center;
    line-height: 20px;
    float: left;
    background-color: #007AFF;
    border-radius: 100%;
    margin: 0 5px;
    cursor: pointer;
    padding-left: 0;
}

.step span.active {
    background-color: #00FFFF;
}
.bannerprev:hover,.bannernext:hover{
    background-color: rgba(0,0,0,0.18);
}

/*院校信息库*/
.schoolInfo{
    width: 80%;
    height: auto;
    padding: 1rem 0;
    margin: 0 auto;
}
.infoPage li{
    width: 100%;
    height: 16rem;
    margin: 0 auto;
    background-color: #0aaa82;
}
.infoPage .page02,.infoPage .page03{
    display: none;
}
/*服务推荐模块*/
.fwtj{
    height: 6.8rem;
    border: 1px solid red;
}
.fwtjList{
    width: 63.1%;
    margin: 0 auto;
    height: 70%;
    border: 1px solid red;
    margin-top: 1rem;
}
.fwtjList li{
    float: left;
    width: 25%;
}
.fwtjList li a{
    display: block;
}
.fwtjList li i{
    float: left;
    width: 20%;
    height: 100%;
    background: url("/images/newindex/syFwtj.png") no-repeat 0rem 1rem;
}
.fwtjList li span{
    float: left;
    height: 100%;

}

/*媒体查询样式*/
@media (max-width: 1024px){
    /*顶部轮播图*/
    .step{
        left: 42%;
    }
}
@media (max-width: 768px){

}
@media (max-width: 414px){
    .indexBanner{
        margin-top: 6rem;
    }
    .bannerprev img,.bannernext img{
        width: 60%;
    }
    .step{
        left: 33%;
    }
}