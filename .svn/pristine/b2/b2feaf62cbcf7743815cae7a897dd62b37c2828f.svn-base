*{margin:0;padding:0;font-family:"微软雅黑 Light";}
html{font-size:20px;}
@media screen and (max-width: 1920px) {
    html {
        font-size: 18px !important;
    }
}

@media screen and (max-width: 1300px) {
    html {
        font-size: 16px !important;
    }
}

@media screen and (max-width: 1280px) {
    html {
        font-size: 14px !important;
    }
}

@media screen and (max-width: 750px) {
    html {
        font-size: 12px !important;
    }
    body {
        max-width: 750px;
    }
}
body{background: #fff;}
ul,li{list-style: none;}
a{text-decoration: none;}
.banner{position:relative;width: 100%;height: 20rem;overflow: hidden;margin-top:3rem;}

.container {
    width: 60rem;
    margin: 2rem auto;
}
.languge-pacific{
    width:60rem;
    height:22rem;
    border:1px solid #d6dce1;
    -webkit-box-shadow:0 0 5px rgba(0, 0, 0, .15);
    -moz-box-shadow:0 0 5px rgba(0, 0, 0, .15);
    box-shadow:0 0 5px rgba(0, 0, 0, .15);
    padding:1rem;
    margin-top:3rem;
}
.lp-title{
    width: 100%;
    height:3rem;
}
.lp-title img{
    width:30%;
}
.lp-con-img img{
    width:80%;
    height:auto;
}
.lp-title img img{
    width:60%;
    height:auto;
}
.lp-content{
    width:100%;
    height:16rem;
    margin-top:1rem;
}
.lp-con-img{
    width:50%;
    height:16rem;
    overflow: hidden;
    float: left;
}
.lp-con-img img{
    width:100%;
    height:auto;
}
.lp-con-txt{
    width:45%;
    float: left;
    margin-left:1rem;
}
.lp-con-txt h3{
    margin-top:0rem;
}
.texts{
    display: inline-block;
    font-family:"微软雅黑 Light";
    font-size:0.8rem;
    margin-top:1rem;
    line-height:1.4rem;
}
.advantage{
    width:100%;
    height:auto;
    text-align: center;
    margin-top:3rem;
}
.ad-content{
    width:100%;
    height:auto;
    margin-top:5rem;
}
.ad-content ul{
    width:100%;
    height:12rem;
    margin-top:3rem;
}
.ad-content ul li{
    display: inline-block;
    width:33%;
    height:12rem;
}
.ad-content-span{
    display: block;
    width:7rem;
    height:4rem;
    position: relative;
    left:5.5rem;
    font-size:0.7rem;
    font-family:"微软雅黑 Light";
    line-height:1.4rem;
}
.lspan{
    width:9rem;
}
.ad-content-p{
    font-weight:bold;
    font-family:"微软雅黑 Light";
    margin-top:0.5rem;
}
.system{
    width:100%;
    height:23rem;
    background: url("/images/system-bg.jpg") no-repeat;
    -webkit-border-radius:0.4rem;
    -moz-border-radius:0.4rem;
    border-radius:0.4rem;
    text-align: center;
    padding-top:2rem;
    margin-top:4rem;
}
.system-title{
    color: #fff;
    font-family:"黑体";
    width:80%;
    margin:0 auto;
    padding-bottom:1rem;
    border-bottom:1px solid #d3f1f3;
}
.system-content{
    width:76%;
    height:13rem;
    margin:2rem auto;
}
.system-content-img{
    width:25%;
    height:auto;
    float: left;
    background: url("/images/owl.png") no-repeat top center;
    -webkit-background-size:45%;
    background-size:45%;
    padding-top:5.6rem;
    margin-left:1rem;
}
.consult{
    text-decoration: none;
    display: block;
    margin-top:0.2rem;
    color: #fff;
    cursor: default;
}
.system-content-txt{
    width:60%;
    float: left;
    margin-top:0.5rem;
    margin-left:1rem;
}
.system-content-txt span{
    width:32rem;
    display: inline-block;
    text-align: left;
    font-family:"微软雅黑 Light";
    font-size:0.8rem;
    font-weight:200;
    color: #fff;
    line-height:1.7rem;
}




