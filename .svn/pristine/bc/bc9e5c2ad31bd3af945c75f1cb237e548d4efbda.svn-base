@charset "utf-8";
.further-info, .student-list{
    background-color: #fff;
}
* {
    padding: 0;
    margin: 0;
    padding-left: 0;
}
html {
    font-size: 20px;
}

@media screen and (max-width: 1920px) {
    html {
        font-size: 18px !important;
    }
}

@media screen and (max-width: 1300px) {
    html {
        font-size: 16px !important;
    }
}

@media screen and (max-width: 1280px) {
    html {
        font-size: 14px !important;
    }
}

@media screen and (max-width: 750px) {
    html {
        font-size: 12px !important;
    }

    body {
        max-width: 750px;
    }
}


/*底部样式*/
.newBottom{
    background-color: #333;
    padding: 2rem 0;
    margin-top: -1rem;
    position: relative;
    margin-top: 3rem;
}
.bottomBox{
    width: 64%;
    margin: 0 auto;
    color: #fff;
}
.bottomBox .icp{
    color: #fff;
    text-align: center;
    font-size: 0.9rem;
    font-family: "Microsoft Yahei";
}
.bottomBox .img{
    margin-left: 2rem;
}
.bottomBox .navList li{
    width: 33.33%;
    float: left;
}
.navList li:nth-child(1),.navList li:nth-child(2){
    margin: 2rem 0 3rem 0;
}
.navList li:nth-child(2){
    border-left: 0.08rem solid #fff;
    padding-left: 5rem;
}

.navList li:nth-child(1) a{
    color: #fff;
    text-decoration: underline;
    display: block;
    width: 50%;
    float: left;
    font-family: "Microsoft Yahei";
    font-size: 0.84rem;
    height: 2rem;
}
.navList li:nth-child(2) a{
    color: #fff;
    text-decoration: underline;
    display: block;
    font-family: "Microsoft Yahei";
    font-size: 0.84rem;
    height: 2rem;
}
.navList li:nth-child(3) span{
    font-size: 0.9rem;
    font-family: "Microsoft Yahei";
}
.navList li:nth-child(3) span:before{
    display: inline-block;
    content: "";
    width: 3rem;
    height: 3rem;
    background: url(/images/map_icon.png) no-repeat 0rem -10rem;
    background-size: 2.4rem;
}
.navList .kanwoewm img {
    width:30%;
    margin: 1rem 1rem 0 0;
}
@media (max-width: 1024px){
    /*底部*/
    .bottomBox{
        width: 86%;
    }
}

@media (max-width: 768px){
    /*底部*/
    .navList li:nth-child(1){
        width: 100%;
    }
    .navList li:nth-child(1) a{
        width: 25%;
    }
    .navList li:nth-child(2){
        width: 36%;
    }
    .navList li:nth-child(3){
        width: 64%;
    }

    .navList .kanwoewm img{
        width: 24%;
    }
    .navList li:nth-child(1), .navList li:nth-child(2) {
        margin: 0.8rem 0 0 0;
    }
    .navList li:nth-child(2) {
        border-left: none;
        padding: 0rem 2rem 0 0;
        margin-top: 4rem;
        text-align: right;
    }

}

@media (max-width: 560px){
    /*底部*/
    .navList li:nth-child(1) a {
        width: 33.33%;
        font-size: 0.6rem;
        margin-top: 1rem;
    }
    .navList .kanwoewm img {
        width: 36%;
    }
    .bottomBox {
        width: 92%;
    }
}